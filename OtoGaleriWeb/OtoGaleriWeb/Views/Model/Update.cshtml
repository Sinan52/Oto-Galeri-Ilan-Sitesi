@model Entities.Model
@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<title>Güncelle</title>
<br />
<h2>&emsp;Model Güncelleme Sayfası</h2>
<br />

<div class="container">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            <b>@Html.Label("Marka Listesi", htmlAttributes: new { @class = "control-label col-md-2" })</b>
            <div class="col-md-10">
                @Html.DropDownList("BrandId", (SelectList)ViewBag.BrandList, "Marka Seçiniz ...", new { @class = "dropdown form-control" })
            </div>
        </div>
        <div class="form-group">
            <b>@Html.Label("Model İsmi", htmlAttributes: new { @class = "control-label col-md-2" })</b>
            <div class="col-md-10">
                @Html.EditorFor(model => model.ModelName, new { htmlAttributes = new { @class = "form-control", @placeholder = "Model İsmi Giriniz ..." } })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Güncelle" class="btn btn-success" />
            </div>
        </div>
        <div>
            <input type="hidden" name="ModelId" value="@Model.ModelId" />
        </div>
    }
    <div>
        @Html.ActionLink("Geri Dön", "Index", null, new { @class = "btn btn-primary" })
    </div>
</div>