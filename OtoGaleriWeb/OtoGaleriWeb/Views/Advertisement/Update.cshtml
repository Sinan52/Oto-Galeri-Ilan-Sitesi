@model Entities.Advertisement
@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<title>Güncelle</title>
<br />
<h2>&emsp;İlan Güncelleme Sayfası</h2>
<br />

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap 4 DatePicker</title>
    <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <script src="https://unpkg.com/gijgo@1.9.13/js/gijgo.min.js" type="text/javascript"></script>
    <link href="https://unpkg.com/gijgo@1.9.13/css/gijgo.min.css" rel="stylesheet" type="text/css" />
</head>

<div class="container">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            <b>@Html.Label("İlan Başlığı", htmlAttributes: new { @class = "control-label col-md-2" })</b>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Header, new { htmlAttributes = new { @class = "form-control", @placeholder = "İlan Başlığı Giriniz ..." } })
            </div>
        </div>
        <div class="form-group">
            <b>@Html.Label("İlan No", htmlAttributes: new { @class = "control-label col-md-2" })</b>
            <div class="col-md-10">
                @Html.EditorFor(model => model.No, new { htmlAttributes = new { @class = "form-control", @placeholder = "İlan Noyu Giriniz ..." } })
            </div>
        </div>
        <div class="form-group">
            <b>@Html.Label("İlan Tarihi", htmlAttributes: new { @class = "control-label col-md-2" })</b>
            <div class="col-md-10">
                <div class="well">
                    <input id="datepicker" name="Date" width="276" value="@Model.Date" />
                    <script type="text/javascript">
                        $('#datepicker').datepicker({
                            uiLibrary: 'bootstrap4',
                            format: 'dd/mm/yyyy'
                        });
                    </script>
                </div>
            </div>
        </div>
        <div class="form-group">
            <b>@Html.Label("Araç Seçimi", htmlAttributes: new { @class = "control-label col-md-2" })</b>
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.CarId, (SelectList)ViewBag.CarList, "Araç Seçiniz ...", new { @class = "dropdown form-control" })
            </div>
        </div>
        <div class="form-group">
            <b>@Html.Label("İlan Detayı", htmlAttributes: new { @class = "control-label col-md-2" })</b>
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Details, htmlAttributes: new { @class = "form-control", @placeholder = "İlan Detayını Giriniz ..." })
            </div>
        </div>
        <div class="form-group">
            <b>@Html.Label("İlan Durumu", htmlAttributes: new { @class = "control-label col-md-2" })</b>
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.State, new[] { new SelectListItem { Text = "Araç İlanda", Value = "True" }, new SelectListItem { Text = "İlanı Kaldır", Value = "False" } }, htmlAttributes: new { @class = "dropdown form-control" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Güncelle" class="btn btn-success" />
            </div>
        </div>
        <div>
            <input type="hidden" name="AdvId" value="@Model.AdvId" />
        </div>
    }
    <div>
        @Html.ActionLink("Geri Dön", "Index", null, new { @class = "btn btn-primary" })
    </div>
</div>