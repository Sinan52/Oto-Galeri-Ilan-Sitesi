@model Entities.User
@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>&emsp;Personel Güncelleme Sayfası</h2>
<br />

<div class="container">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            <b>@Html.Label("Personel İsmi", htmlAttributes: new { @class = "control-label col-md-2" })</b>
            <div class="col-md-10">
                @Html.EditorFor(model => model.FullName, new { htmlAttributes = new { @class = "form-control", @placeholder = "Personel İsmi Giriniz ..." } })
            </div>
        </div>
        <div class="form-group">
            <b>@Html.Label("Personel Kullanıcı Adı", htmlAttributes: new { @class = "control-label col-md-5" })</b>
            <div class="col-md-10">
                @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control", @placeholder = "Personel Kullanıcı Adı Giriniz ..." } })
            </div>
        </div>
        <div class="form-group">
            <b>@Html.Label("Personel Kullanıcı Şifre", htmlAttributes: new { @class = "control-label col-md-5" })</b>
            <div class="col-md-10">
                @Html.PasswordFor(model => model.UserPassword, htmlAttributes: new { @class = "form-control", @placeholder = "Personel Şifre Giriniz ..." })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Güncelle" class="btn btn-success" />
            </div>
        </div>
        <div>
            <input type="hidden" name="userId" value="@Model.UserID" />
        </div>
    }
    <div>
        @Html.ActionLink("Geri Dön", "Index", null, new { @class = "btn btn-primary" })
    </div>
</div>